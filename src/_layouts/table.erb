<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: data.title %>
  </head>
  <body class="flex min-h-screen flex-col bg-white dark:bg-neutral-900">
    <!-- ========== HEADER ========== -->
    <header class="sticky top-0 inset-x-0 z-50 flex flex-col bg-white dark:bg-neutral-800">
      <!-- Top Bar -->
      <div class="border-b border-gray-200 dark:border-neutral-700">
        <div class="flex flex-wrap justify-between gap-x-3 items-center w-full mx-auto py-2.5 px-4 sm:px-6 lg:px-8">
          <div class="flex items-center">
            <!-- Logo -->
            <a class="flex-none rounded-md inline-block font-semibold focus:outline-none focus:opacity-80" href="<%= relative_url '/' %>" aria-label="<%= site.metadata.title %>">
              <% if site.metadata.logo %>
                <img class="w-28 h-auto" src="<%= relative_url site.metadata.logo %>" alt="<%= site.metadata.title %>">
              <% else %>
                <span class="text-xl font-bold text-gray-800 dark:text-white"><%= site.metadata.title %></span>
              <% end %>
            </a>
          </div>
          <div class="flex items-center gap-x-3">
            <!-- Header right slot: use data.header_right or override in page -->
            <div class="text-xs leading-tight text-gray-500 dark:text-neutral-400 text-right">
              <div>Game Version: <%= site.data.game_data["game_version"] %></div>
              <div>Last Updated: <%= Time.parse(site.data.game_data["last_updated"]).utc.iso8601 %></div>
            </div>
            <a class="inline-flex items-center justify-center size-8 rounded-md border border-transparent text-gray-500 hover:text-gray-800 hover:bg-gray-100 dark:text-neutral-400 dark:hover:text-neutral-200 dark:hover:bg-neutral-700" href="https://github.com/paul/BAR-units-db" aria-label="BAR Units DB on GitHub">
              <svg class="size-5" viewBox="0 0 16 16" aria-hidden="true" fill="currentColor">
                <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </header>
    <!-- ========== END HEADER ========== -->
    <!-- ========== MAIN CONTENT ========== -->
    <main id="content" class="relative flex-1 flex flex-col">
      <div class="w-full py-5 px-4 sm:px-6 lg:px-8 mx-auto">
      </div>
      <!-- Table Content -->
      <div class="flex-1 overflow-x-hidden">
        <div class="w-full pb-10 px-4 sm:px-6 lg:px-8 mx-auto">
          <!-- Table Section -->
          <div class="overflow-x-auto [&::-webkit-scrollbar]:h-2 [&::-webkit-scrollbar-thumb]:rounded-sm [&::-webkit-scrollbar-track]:bg-gray-100 [&::-webkit-scrollbar-thumb]:bg-gray-300 dark:[&::-webkit-scrollbar-track]:bg-neutral-700 dark:[&::-webkit-scrollbar-thumb]:bg-neutral-500">
            <div class="min-w-full inline-block align-middle">
              <%= yield %>
            </div>
          </div>
          <!-- End Table Section -->
        </div>
      </div>
    </main>
    <!-- ========== END MAIN CONTENT ========== -->
  </body>
</html>
